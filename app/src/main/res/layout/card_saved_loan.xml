<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:id="@+id/topmbele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        >


        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

        <TextView
            android:text="Car Name"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <TextView
            android:id="@+id/loanNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:layout_column="2"
            android:layout_marginStart="10dp"/>
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <TextView
            android:text="Principal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"/>
        <TextView

            android:id="@+id/principalcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_column="2"
            android:layout_marginStart="10dp"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <TextView
            android:text="MonthlyPayment"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/monthlypaymentcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
          android:layout_column="2"/>
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <TextView
            android:text="Monthly Interest Rate"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/interestRateCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
         android:layout_column="2"

            />

        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <TextView
            android:text="Annual Interest"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/annualInterestCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
           android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <TextView
            android:text="Months"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/monthsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:layout_column="2"/>
        </TableRow>

    </TableLayout>

 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:layout_below="@id/topmbele"
     android:padding="8dp">
    <ImageButton
        android:id="@+id/setReminderBtn"
        android:src="@drawable/addreminderthree"
        android:padding="5dp"
        android:background="@drawable/roundbacktwo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
       android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:src="@drawable/details"
        android:padding="5dp"
        android:id="@+id/viewDetails"
        android:background="@drawable/roundbacktwo"
        android:layout_centerInParent="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"/>
     <ImageButton
         android:src="@drawable/deleteicon"
         android:padding="5dp"
         android:id="@+id/deleteDetails"
         android:background="@drawable/roundbacktwo"
         android:layout_alignParentEnd="true"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:scaleType="fitCenter"
         android:layout_marginEnd="30dp"/>

</RelativeLayout>
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="@color/colorPrimaryDark"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>